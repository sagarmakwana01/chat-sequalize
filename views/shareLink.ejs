<%- include('layouts/header.ejs') %>

    <div class="container">
        <div>
            <img src="/images/<%= group.image %>" alt="" width="200px" height="200px">
            <p><b>
                    <%= group.name %>
                </b></p>
                <p><b>Total Members :- </b><%= totalMembers %></p>
                <%
                
                if(available != 0){
                    %>
                    <p>Avilable for <b><%= available %></b> Member Only.</p>
                    <%
                }
                if(isOwner){
                    %>
                    <p>You are the creator of  this group. so you can't join this group</p>
                    <%
                }else if(isJoined > 0){
                    %>
                    <p>You are already joined this group👍.</p>
                    <%
                }else if(available ==0){
                    %>
                    <p>Group already full👎.</p>
                    <%
                } else{
                    %>
                    <button class="btn btn-primary join-now" data-id="<%= group.id %>">Join Now</button>
                    <% 
                }
              
                %>
        </div>


    </div>

    





